# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias update='bash ~/.atina/scrollbook/updateNclean.sh'
alias wifi='nmtui'
alias bat='acpi'
alias h='htop'
alias size='df -h'
alias programlist='sudo pacman -Qeq'
alias audio='bash ~/.atina/scrollbook/ytdl-audio.sh'
alias video='bash ~/.atina/scrollbook/ytdl-video.sh'
alias deploy='bash ~/.atina/scrollbook/deploy-folders.sh'
alias activate_superuser='bash ~/.atina/scrollbook/superuser.sh'
alias s='bash ~/.atina/scrollbook/search.sh'
alias y='bash ~/.atina/scrollbook/yay.sh'
alias smount='bash ~/.atina/scrollbook/mount-dvd.sh'
alias umount='bash ~/.atina/scrollbook/unmount-dvd.sh'
alias r='ranger'
alias n='neofetch'

PS1='[\u@\h \W]\$ '
